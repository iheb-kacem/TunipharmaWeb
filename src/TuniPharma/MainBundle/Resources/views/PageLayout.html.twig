{% extends "MainBundle::Layout.html.twig" %}
{% block coeur %}
    <div id='main' role='main'>
        <div id='main-content-header'>
            <div class='container'>
                <div class='row'>
                    <div class='col-sm-12'>
                        <h1 class='title'>
                            {% block titre %}
                            {% endblock titre %}
                            <small>
                                {% block description %}
                                {% endblock description %}
                            </small>
                        </h1>
                    </div>
                </div>
            </div>
        </div>
        <div id='main-content'>
            <div class='container'>
                {% block corps %}
                {% endblock corps %}
            </div>
        </div>
    </div>
    {% endblock coeur %}